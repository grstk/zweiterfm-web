.col-xl-4.col-md-6
  .card.my-3
    .card-header
      .h5.card-title
        = setlist.time.strftime("%Y-%m-%d")
      .h6.card-subtitle.mb-2.text-body-secondary
        = setlist.city
    .card-body
      %ol.zfm-list.ps-5.pt-2
        - setlist.songs.each do |song|
          %li{ class: song_classes(song) }
            = song

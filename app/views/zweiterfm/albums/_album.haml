.col-lg-4
  .card.m-3
    = image_tag album.cover_url, class: "card-img-top" if album.cover_url.present?
    .card-body
      %ol
        - album.tracks.each do |track|
          - if @songs.include?(track)
            %li.text-decoration-line-through.text-danger
              = track
          - else
            %li
              = track
